layout {
    tab_template name="ui" {
        children
        pane size=1 borderless=true {
           plugin location="zjstatus"
        }
    }

    default_tab_template {
        pane split_direction="vertical" {
            pane name="Files" {
                command "env"
                args "YAZI_CONFIG_HOME=~/.config/zellij/yazi" "yazi"
            	  size "20%"
            }
        }
        pane size=1 borderless=true {
           plugin location="zjstatus"
        }
    }
}
